---
import { Image } from 'astro:assets';
import logoFooter from '../assets/ISOTIPO.png'
import { FaInstagram } from "react-icons/fa";
---

<main id="quienessomos">
    <div class="contenedorLogoFooter">
        <div class="logoImageContainer">
            <Image src={logoFooter} alt="Logo" width={500} class="logoFooter"/>
        </div>
            <div class="textoFooter">
                <p>Especialistas en producción
                    técnica para eventos, ofreciendo
                    soluciones integrales en sonido,
                    iluminación y pantallas para
                    espectáculos corporativos,
                    artísticos y sociales.</p>
                    <a href="https://www.instagram.com/jprtecnica/?hl=es"><FaInstagram class="instagram"/></a>
        </div>
    </div>
</main>

<style>
    main{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 100px;
        height: 70vh;
        background-image:
		linear-gradient(to bottom, rgba(0, 0, 0, 0.931), rgba(0, 0, 0, 0.681)),
		url(../../../public/images/footer.jpg);
        background-size: cover;
        background-position: top;
        background-repeat: no-repeat;
        padding-bottom: 50px;
        filter: grayscale(1);
        
    }
    .textoFooter{
        height: fit-content;
        width: 50%;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;

    }
    .textoFooter p{
        padding-bottom: 40px;
        margin: 0px;
        font-family: 'PublicRegular', sans-serif;
        font-size: 1.5rem;
    }
    .contenedorLogoFooter{
        display: flex;
        align-items: center;
        width: 500px;
        height: 80%;
        
        
    }
    .logoImageContainer{
        width: 50%;
        height: 60%;
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }
    .contenedorLogoFooter .logoImageContainer .logoFooter{
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    a{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50px;
        width: 50px;
        border-radius: 100%;
        font-size: 3rem;
        color: white;

    }
    
    span{
        color: rgba(255, 255, 255, 0.558);
        margin-bottom: 40px;
        font-family: 'PublicRegular', sans-serif;
    }
</style>