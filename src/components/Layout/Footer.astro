---
import logoFooter from '../../../public/images/quienesSomos.png'
import { FaInstagram } from "react-icons/fa";
---

<main>
    <div class="contenedorLogoFooter">
        <img src={logoFooter.src} alt="logo">
        <div class="textoFooter">
            

                <p>Especialistas en producción
                    técnica para eventos, ofreciendo
                    soluciones integrales en sonido,
                    iluminación y pantallas para
                    espectáculos corporativos,
                    artísticos y sociales.</p>
                    <a href=""><FaInstagram/></a>
                
        </div>
    </div>
    <span>
        2025 | Copyright | Juan Pablo Recio Producciones, Todos los derchos reservados
    </span>
</main>

<style>
    main{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 100px;
        height: 70vh;
        background-image:
		linear-gradient(to bottom, rgba(0, 0, 0, 0.931), rgba(0, 0, 0, 0.681)),
		url(../../../public/images/footer.jpg);
        background-size: cover;
        background-position: top;
        background-repeat: no-repeat;
        padding-bottom: 50px;
        filter: grayscale(1);
    }
    .textoFooter{
        width: 350px;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;

    }
    .textoFooter p{
        padding-top: 40px;
        width: 60%;
    }
    .contenedorLogoFooter{
        position: relative;
        display: flex;
        justify-content: flex-end;
        width: 35%;
        height: 80%;
    }
    .contenedorLogoFooter img{
        width: 100%;
        height: 100%;
        object-fit: contain;
        position: absolute;
        top: 0;
        left: 0;
    }
    a{
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: white;
        height: 30px;
        width: 30px;
        border-radius: 100%;
        font-size: 1.4rem;
        color: black;
    }
    span{
        color: white;
        margin-bottom: 40px;
    }
</style>