---
import { Image } from "astro:assets";
import { GoArrowRight, GoArrowUpRight } from "react-icons/go";
import logo1 from "../../assets/logo.png";
import logo2 from "../../assets/ISOTIPO.png";
---
    <nav>
        <div class="logo">
            <a href="/"><Image src={logo1} alt="Logo" class="logo1"/></a>
            <a href="/"><Image src={logo2} alt="Logo" class="logo2"/></a>
        </div>
        <ul>
            <li><a href="/1">EVENTOS</a></li>
            <li><a href="/#quienessomos">QUIENES SOMOS</a></li>
            <li><a href="/equipamiento">NUESTRO EQUIPAMIENTO</a></li>
            <li><div class="contacto">
                <a href="/">CONTACTO</a>
                <a href="/" class="arrow"><GoArrowRight/></a>
            </div>
        </li>
        </ul>
    </nav>


<style>
    nav{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        height: 80px;
        background-color: #000;
        padding: 0px 50px;
        box-sizing: border-box;
        z-index: 999;
        font-family: 'ChivoMonoSB', sans-serif;
        font-weight: 600;

    }
    .logo{
        width: 200px;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .logo img{
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    .logo2{
        display: none;
    }
    ul{
        list-style: none;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        width: 100%;
    }
    li{
        margin: 0px 20px;
        color: white;
    }
    .contacto{
        display: flex;
    }
    .contacto a{
        background-color: white;
        color: black;
        padding: 10px 20px;
        border-radius: 20px;
    }
    .contacto .arrow{
        padding: 0px;
        width: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    a{
        text-decoration: none;
        color: white;
        font-size: 1rem;
        letter-spacing: 0.1em;

    }
    a:hover{
        text-shadow:
    0 0 5px rgba(255, 255, 255, 0.33),
    0 0 5px rgba(255, 255, 255, 0.669)
}
    
    @media screen and (max-width: 1024px) {
        .logo{
            width: 150px;
        }
        .logo img{
            width: 100%;
            height: 100%;
        }
        ul{
            gap: 15px;
        }
        li{
            text-align: center;
            margin: 0px 10px;
        }
        li a{
            font-size: 0.8rem;
        }
        
    }
    @media screen and (max-width: 768px) {
        .logo{
            justify-content: flex-start;
            width: 100px;
        }
        .logo a{
            height: 70%;
        }
        .logo img{
        width: 100%;
        height: 100%;
    }
    .logo1{
        display: none;
    }
    .logo2{
        display: flex;
    }
        nav{
            gap: 20px;
            padding: 0px 20px;
        }
        .contacto a{
        background-color: white;
        color: black;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.7rem;
        }
        ul{
            justify-content: flex-end;
            gap: 15px;
            padding: 0px;
            
        }
        li{
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0px;
        }
        li a{
            text-align: center;
            font-size: 0.6rem;
        }
        .contacto .arrow{
            display: none;
        }
        .contacto a{
            font-size: 0.5rem;
        }
    }
        
    
</style>