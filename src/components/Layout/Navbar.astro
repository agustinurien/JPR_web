---
import logo from '../../../public/images/logo.png'
import { GoArrowUpRight } from "react-icons/go";
---
    <nav>
        <div class="logo">
            <a href="/"><img src="/images/logo.png" alt="Logo" /></a>
        </div>
        <ul>
            <li><a href="/">EVENTOS</a></li>
            <li><a href="/servicios">QUIENES SOMOS</a></li>
            <li><a href="/galeria">NUESTRO EQUIPAMIENTO</a></li>
            <li><div class="contacto">
                <a href="">CONTACTO</a>
                <a href="" class="arrow"><GoArrowUpRight/></a>
            </div></li>
        </ul>
    </nav>


<style>
    nav{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        height: 80px;
        background-color: #000;
        padding: 0px 50px;
        box-sizing: border-box;
        z-index: 999;

    }
    .logo{
        width: 200px;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .logo img{
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    ul{
        list-style: none;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        width: 100%;
    }
    li{
        margin: 0px 20px;
        color: white;
    }
    .contacto{
        display: flex;
    }
    .contacto a{
        background-color: white;
        color: black;
        padding: 10px 20px;
        border-radius: 20px;
    }
    .contacto .arrow{
        padding: 0px;
        width: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    a{
        text-decoration: none;
        color: white;
        font-size: 1rem;
    }
</style>